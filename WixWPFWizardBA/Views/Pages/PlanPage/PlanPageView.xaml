<UserControl x:Class="WixWPFWizardBA.Views.Pages.PlanPage.PlanPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:planPage="clr-namespace:WixWPFWizardBA.Views.Pages.PlanPage"
             xmlns:wixWpfWizardBa="clr-namespace:WixWPFWizardBA"
             d:DataContext="{d:DesignInstance planPage:PlanPageViewModel}"
             d:DesignHeight="240"
             d:DesignWidth="507"
             mc:Ignorable="d">
    <DockPanel Margin="0 0 0 60"
               LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontFamily="Segoe UI" FontSize="23" Foreground="#e42f25" Text="{x:Static wixWpfWizardBa:Localisation.PlanPage_PlanningMessage}"></TextBlock>
    </DockPanel>

</UserControl>
