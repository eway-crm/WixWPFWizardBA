<UserControl x:Class="WixWPFWizardBA.Views.Pages.FinishErrorPage.FinishErrorPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:finishErrorPage="clr-namespace:WixWPFWizardBA.Views.Pages.FinishErrorPage"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance finishErrorPage:FinishErrorPageViewModel}"
             d:DesignHeight="240"
             d:DesignWidth="507"
             mc:Ignorable="d">
    <DockPanel Margin="35 10 35 60"
               LastChildFill="False">
        <TextBlock DockPanel.Dock="Top"
                   Text="{Binding ErrorTitle}"
                   TextWrapping="Wrap"
                   FontSize="23"
                   FontFamily="Segoe UI"
                   Foreground="#e42f25"/>
        <TextBlock Margin="0 15 0 0"
                   DockPanel.Dock="Top"
                   FontSize="20"
                   Text="{Binding WizardViewModel.ErrorMessage}"
                   TextWrapping="Wrap"
                   Foreground="#858585" />
        <DockPanel DockPanel.Dock="Bottom"
                    HorizontalAlignment="Center">
            <Button Command="{Binding NextPageCommand}"
                FontSize="22"
                FontFamily="Segoe UI"
                BorderBrush="#858585"
                Background="White"
                Height="64"
                Margin="5"
                MinWidth="190"
                Padding="15 5 15 5">
                <TextBlock Text="{Binding NextButtonText}"
                           Foreground="#858585"
                       TextWrapping="NoWrap" />
            </Button>
        </DockPanel>
    </DockPanel>
</UserControl>